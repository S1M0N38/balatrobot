{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "stylua src/lua"
          },
          {
            "type": "command",
            "command": "ruff format -s src/balatrobot tests/"
          },
          {
            "type": "command",
            "command": "mdformat --number --check docs/api-protocol.md docs/index.md docs/installation.md docs/bot-development.md docs/troubleshooting.md"
          }
        ]
      }
    ]
  }
}
