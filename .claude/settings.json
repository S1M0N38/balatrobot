{
  "permissions": {
    "allow": [
      "Bash(pytest:*)",
      "Bash(ruff check:*)",
      "Bash(ruff format:*)",
      "Bash(basedpyright:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "stylua src/lua"
          },
          {
            "type": "command",
            "command": "ruff check --select I --fix src/balatrobot tests/ && ruff format -s src/balatrobot tests/"
          },
          {
            "type": "command",
            "command": "mdformat --number docs/api-protocol.md docs/index.md docs/installation.md docs/bot-development.md docs/troubleshooting.md"
          }
        ]
      }
    ]
  }
}
